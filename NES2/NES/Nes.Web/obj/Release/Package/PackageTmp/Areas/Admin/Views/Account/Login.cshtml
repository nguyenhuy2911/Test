@model Nes.Web.Areas.Admin.Models.LoginModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <meta charset="utf-8">
    <title>@Nes.Resources.NesResource.AdminLoginHeaderText</title>
    @Styles.Render("~/Content/themes/admin/common")
    @Scripts.Render("~/bundles/adminjs")
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                
                <div class="login-panel panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">@Nes.Resources.NesResource.AdminLoginHeaderText</h3>
                    </div>
                    <div class="panel-body">
                        @using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true, null, new { @class = "alert alert-danger" })
                            <fieldset>
                                <div class="form-group">
                                    @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", @placeholder = "E-mail", @autofocus = "true" })
                                </div>
                                <div class="form-group">
                                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Password", @type = "password", @value = "" })
                                </div>
                                <div class="checkbox">
                                    <label>
                                        @Html.CheckBoxFor(m => m.RememberMe)
                                        @Html.LabelFor(m => m.RememberMe, new { @class = "checkbox" })
                                    </label>
                                </div>
                                <!-- Change this to a button or input when using this as a form -->
                                <input type="submit" value="@Nes.Resources.NesResource.AdminLoginButtonText." class="btn btn-lg btn-success btn-block" />
                            </fieldset>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>
</html>
